<?xml version="1.0"?>

<PropertyList>
  <name>ATC2</name>
  <w-base>1024</w-base>
  <h-base>1024</h-base>
  <layers>
    <layer>
      <name>radar heading</name>
      <texture>
        <path>Aircraft/ATC-ML/transparent.rgb</path>
        <x1>0</x1>
        <y1>0</y1>
        <x2>1</x2>
        <y2>1</y2>
      </texture>
      <emissive>true</emissive>
      <w>760</w>
      <h>760</h>
    </layer>
    <layer>
      <name>ground network</name>
      <texture>
        <path>Aircraft/Instruments/Textures/od_groundradar.rgb</path>
        <x1>0</x1>
        <y1>0</y1>
        <x2>1</x2>
        <y2>1</y2>
      </texture>
      <emissive>true</emissive>
      <w>512</w>
      <h>512</h>
      <transformations>
        <transformation>
          <type>rotation</type>
          <property>environment/magnetic-variation-deg</property>
          <scale>-1</scale>
        </transformation>
      </transformations>
    </layer>
    <layer>
      <name>wxradar</name>
      <texture>
        <path>Aircraft/Instruments/Textures/od_wxradar.rgb</path>
        <x1>0</x1>
        <y1>0</y1>
        <x2>1</x2>
        <y2>1</y2>
      </texture>
      <emissive>true</emissive>
      <w>512</w>
      <h>512</h>
    </layer>
    <layer>
      <name>localizer</name>
        <condition>
          <property>/sim/atc/localizer-display</property>
        </condition>
      <texture>
        <path>Aircraft/ATC-ML/localizer.rgb</path>
        <x1>0</x1>
        <y1>0</y1>
        <x2>1</x2>
        <y2>1</y2>
      </texture>
      <emissive>false</emissive>
      <w>8</w>
      <h>256</h>
      <transformations>
        <transformation>
          <type>rotation</type>
          <property>sim/atc/localizer-heading-deg</property>
        </transformation>
        <transformation>
          <type>x-shift</type>
          <property>sim/atc/localizer-offset-display</property>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-128</offset>
        </transformation>
      </transformations>
    </layer>
  </layers>
  <actions>
    <action>
      <name>outline</name>
      <x>-256</x>
      <y>-256</y>
      <w>512</w>
      <h>512</h>
      <binding>
      </binding>
    </action>
  </actions>
</PropertyList>
